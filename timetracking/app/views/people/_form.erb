<% if @person.errors.any? %>
	<ul>
		<% @person.errors.full_messages.each do |error_msg| %>
			<li><%= error_msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @person do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	Add participation on Project
	<%= select("participation", "project_id", Project.all.collect {|p| [ p.name, p.id ] }, {include_blank: 'None'}) %>
	<br>
	<%= f.submit "Save" %>
<% end %>